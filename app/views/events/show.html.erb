<p class="red" id="notice"><%= notice %></p>

<div class="user-strip">
  <%= @event.description %>
  <%= link_to @register_label, events_users_path({:event_id => @event.id, :user_id => session[:user_id] }), method: "POST", class: "sub-menu-button float-right " + @button_class %>
</div>

<div class="user-strip">
  <%= "Creator : " + @event.creator.name %>
  <% if @event.creator.id == session[:user_id] %>
    <!--<%= link_to "Invite attendees", events_user_path, class: "sub-menu-button float-right w200" %>-->
    <%= link_to 'Edit', edit_event_path(@event), class: "sub-menu-button float-right" %>
    <%= link_to 'Destroy', event_path(@event.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "sub-menu-button float-right" %>
  <% end %>
  <%= link_to 'Back', :back, class: "sub-menu-button float-right" %>
</div>

<table class="w_100 margin-bottom-20">
  <% if @event.creator.id == session[:user_id] %>
    <th class="list-header" colspan="2">
  <% else %>
    <th class="list-header">
  <% end %>
  Attendees
  </th>
  <tbody>
    <% @event.attendees.each do |user| %>
      <tr>
        <td class="td-link">
          <%= link_to user.name, user_path(user.id), class: "tb-link" %>
        </td>
        <% if @event.creator.id == session[:user_id] %>
          <td class="td-link w100">
            <%= link_to "Remove", events_users_path({event_id: @event.id, user_id: user.id}), method: "POST" , class: "tb-link" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% if @event.attendees.count.zero? %>
  <p class="red"> There are no attendees for this event </p>
<% end %>

<table class="w_100">
  <th class="list-header" colspan="2">
  Select Attendees
  </th>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <% unless @event.attendees.include?(user) %>
          <td class="td-link">
            <%= link_to user.name, user_path(user.id), class: "tb-link" %>
          </td>
          <% if @event.creator.id == session[:user_id] %>
          <td class="td-link w100">
            <%= link_to "Invite", events_users_path({event_id: @event.id, user_id: user.id}), method: "POST" , class: "tb-link" %>
          </td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

